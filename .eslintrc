{
  "extends": ["eslint:recommended", "prettier", "prettier/react"],
  "plugins": ["react"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    }
  },
  "env": {
    "browser": true,
    "node": true,
    "mocha": true,
    "es6": true
  },
  "rules": {
    "quotes": ["warn", "single"],
    "no-unused-vars": [
      "error",
      {
        "vars": "all",
        "args": "none"
      }
    ],
    "strict": ["error", "never"],
    "no-console": ["warn"],
    "react/jsx-uses-react": "error",
    "react/jsx-uses-vars": "error",
    "no-tabs": "error",
    "no-case-declarations": "off",
    "indent": [
      "error",
      2,
      {
        "SwitchCase": 1
      }
    ],
    "prefer-const": "warn",
    "no-spaced-func": "error",
    "no-multiple-empty-lines": [
      2,
      {
        "max": 2
      }
    ],
    "array-bracket-spacing": 2,
    "no-undef": 2,
    "no-multi-spaces": 2,
    "comma-style": [2, "last"],
    "semi-spacing": [
      2,
      {
        "before": false,
        "after": true
      }
    ],
    "curly": [2, "multi-line", "consistent"],
    "valid-typeof": 2,
    "no-extra-bind": 2,
    "no-with": 2
  }
}
